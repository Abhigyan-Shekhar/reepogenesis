<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marketplace - JeevBandhu</title>
    <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-gradient-to-br from-blue-50 via-white to-emerald-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-md sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/marketplace" class="text-2xl font-bold text-emerald-600">üêÑ JeevBandhu</a>
                <div class="flex items-center space-x-6">
                    <a href="/marketplace" class="text-emerald-600 font-semibold">Marketplace</a>
                    <% if (user.role==='buyer' ) { %>
                        <a href="/orders/my-orders" class="text-gray-700 hover:text-emerald-600 transition">My
                            Orders</a>
                        <% } %>
                            <% if (user.role==='farmer' ) { %>
                                <a href="/dashboard"
                                    class="text-gray-700 hover:text-emerald-600 transition">Dashboard</a>
                                <% } %>
                                    <span class="text-gray-600">Hi, <%= user.name %></span>
                                    <form action="/logout" method="POST" class="inline">
                                        <button type="submit"
                                            class="text-red-600 hover:text-red-700 transition">Logout</button>
                                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Hero Banner -->
        <div class="bg-gradient-to-r from-emerald-600 to-green-600 rounded-xl p-8 mb-8 text-white">
            <h1 class="text-3xl font-bold mb-2">üõ°Ô∏è Bio-Safe Verified Marketplace</h1>
            <p class="text-emerald-50">All products are verified antibiotic-free with complete medical transparency</p>
        </div>

        <% if (products.length===0) { %>
            <div class="text-center py-16 card">
                <div class="text-6xl mb-4">üõí</div>
                <h2 class="text-2xl font-bold text-gray-900 mb-2">No products available yet</h2>
                <p class="text-gray-600">Check back soon for verified livestock products</p>
            </div>
            <% } else { %>
                <div class="mb-6">
                    <p class="text-gray-600">Showing <%= products.length %> verified product<%= products.length !==1
                                ? 's' : '' %>
                    </p>
                </div>

                <!-- Product Grid -->
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% products.forEach(product=> { %>
                        <% // Backwards compatibility: handle old products without quantity fields const
                            hasQuantitySystem=product.pricePerUnit !==undefined && product.totalQuantity !==undefined;
                            const availableQty=hasQuantitySystem ? (product.totalQuantity - (product.quantitySold || 0))
                            : (product.quantity || 0); %>
                            <div class="card hover:shadow-xl transition-all duration-300">
                                <!-- Verified Badge -->
                                <div class="flex justify-between items-start mb-4">
                                    <h3 class="text-2xl font-bold text-gray-900">
                                        <%= product.productType %>
                                    </h3>
                                    <span class="badge-verified">‚úÖ Verified</span>
                                </div>

                                <!-- Pricing Info -->
                                <% if (hasQuantitySystem) { %>
                                    <!-- New quantity-based system -->
                                    <div class="bg-emerald-50 border-2 border-emerald-200 rounded-lg p-4 mb-4">
                                        <div class="flex justify-between items-center mb-2">
                                            <span class="text-gray-700 text-sm">Price per <%= product.unit.slice(0, -1)
                                                    %></span>
                                            <span class="text-2xl font-bold text-emerald-600">‚Çπ<%=
                                                    product.pricePerUnit.toFixed(2) %></span>
                                        </div>
                                        <div class="flex justify-between items-center text-sm">
                                            <span class="text-gray-600">Available:</span>
                                            <span
                                                class="font-semibold <%= availableQty < product.totalQuantity * 0.2 ? 'text-red-600' : 'text-gray-900' %>">
                                                <%= availableQty.toFixed(1) %> / <%= product.totalQuantity %>
                                                        <%= product.unit %>
                                            </span>
                                        </div>
                                        <% if (product.minOrderQuantity && product.minOrderQuantity> 1) { %>
                                            <div class="text-xs text-gray-600 mt-1">Min order: <%=
                                                    product.minOrderQuantity %>
                                                    <%= product.unit %>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } else { %>
                                        <!-- Old fixed-price system (backwards compatibility) -->
                                        <div class="bg-emerald-50 border-2 border-emerald-200 rounded-lg p-4 mb-4">
                                            <div class="flex justify-between items-center">
                                                <span class="text-gray-700 text-sm">Price</span>
                                                <span class="text-2xl font-bold text-emerald-600">‚Çπ<%= (product.price ||
                                                        0).toFixed(2) %></span>
                                            </div>
                                            <% if (product.quantity) { %>
                                                <div class="text-sm text-gray-600 mt-1">Quantity: <%= product.quantity
                                                        %>
                                                        <%= product.unit %>
                                                </div>
                                                <% } %>
                                        </div>
                                        <% } %>
                                            <!-- Order Section (Buyers Only) -->
                                            <% if (user.role==='buyer' ) { %>
                                                <div class="mb-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                                                    <label class="block text-sm font-medium text-gray-700 mb-2">Quantity
                                                        to
                                                        order:</label>
                                                    <div class="flex items-center space-x-2">
                                                        <input type="number" id="qty-<%= product._id %>"
                                                            min="<%= product.minOrderQuantity %>"
                                                            max="<%= availableQty %>" step="0.1"
                                                            value="<%= product.minOrderQuantity %>"
                                                            class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-emerald-500 focus:border-emerald-500"
                                                            oninput="updateTotal('<%= product._id %>', <%= product.pricePerUnit %>, '<%= product.unit %>')">
                                                        <span class="text-gray-600">
                                                            <%= product.unit %>
                                                        </span>
                                                    </div>
                                                    <div class="mt-2 text-center">
                                                        <span class="text-sm text-gray-600">Total: </span>
                                                        <span id="total-<%= product._id %>"
                                                            class="text-lg font-bold text-emerald-600">
                                                            ‚Çπ<%= (product.minOrderQuantity *
                                                                product.pricePerUnit).toFixed(2) %>
                                                        </span>
                                                    </div>
                                                </div>
                                                <% } %>

                                                    <!-- Source Animal Info -->
                                                    <% if (product.animal) { %>
                                                        <div
                                                            class="bg-green-50 border border-green-200 rounded-lg p-3 mb-4">
                                                            <div class="text-xs text-gray-600 mb-1">üêÆ Source Animal
                                                            </div>
                                                            <div class="font-semibold text-gray-900">
                                                                <%= product.animal.tagId %>
                                                            </div>
                                                            <div class="text-sm text-gray-600">
                                                                <%= product.animal.species %>
                                                                    <%= product.animal.breed ? '- ' +
                                                                        product.animal.breed : '' %>
                                                            </div>
                                                            <div class="mt-2">
                                                                <div class="text-xs text-gray-600 mb-1">Health Score
                                                                </div>
                                                                <div class="flex items-center space-x-2">
                                                                    <div class="flex-1 bg-gray-200 rounded-full h-2">
                                                                        <div class="h-2 rounded-full bg-health-good"
                                                                            style="width: <%= product.animal.healthScore %>%">
                                                                        </div>
                                                                    </div>
                                                                    <span
                                                                        class="text-sm font-semibold text-emerald-600">
                                                                        <%= product.animal.healthScore %>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% } %>

                                                            <% if (product.description) { %>
                                                                <p class="text-gray-600 text-sm mb-4">
                                                                    <%= product.description %>
                                                                </p>
                                                                <% } %>

                                                                    <!-- Actions -->
                                                                    <% if (user.role==='buyer' ) { %>
                                                                        <button
                                                                            onclick="placeOrder('<%= product._id %>')"
                                                                            class="w-full px-6 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition font-semibold">
                                                                            Order üõí
                                                                        </button>
                                                                        <% } %>

                                                                            <div
                                                                                class="mt-3 text-xs text-gray-500 text-center">
                                                                                Listed <%= new
                                                                                    Date(product.createdAt).toLocaleDateString('en-IN')
                                                                                    %>
                                                                            </div>
                            </div>
                            <% }) %>
                </div>
                <% } %>
    </main>

    <footer class="bg-gray-800 text-white mt-12 py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <p>&copy; 2024 JeevBandhu. Building trust through transparency.</p>
        </div>
    </footer>

    <script>
        function updateTotal(productId, pricePerUnit, unit) {
            const qtyInput = document.getElementById(`qty-${productId}`);
            const totalSpan = document.getElementById(`total-${productId}`);
            const qty = parseFloat(qtyInput.value) || 0;
            const total = qty * pricePerUnit;
            totalSpan.textContent = `‚Çπ${total.toFixed(2)}`;
        }

        async function placeOrder(productId) {
            const qtyInput = document.getElementById(`qty-${productId}`);
            const quantity = parseFloat(qtyInput.value);

            if (!quantity || quantity <= 0) {
                alert('‚ùå Please enter a valid quantity');
                return;
            }

            if (!confirm(`Confirm order of ${quantity} units?`)) {
                return;
            }

            try {
                const response = await fetch('/orders/create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId, quantity })
                });

                const result = await response.json();

                if (result.success) {
                    alert(`‚úÖ Order placed successfully! Total: ‚Çπ${result.totalPrice.toFixed(2)}`);
                    window.location.reload();
                } else {
                    alert(`‚ùå ${result.error}`);
                }
            } catch (error) {
                alert('‚ùå Failed to place order. Please try again.');
            }
        }
    </script>
</body>

</html>